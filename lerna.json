{
  "version": "independent",
  "npmClient": "npm",
  "packages": [
    "src/components/*",
    "src/enums",
    "src/interfaces",
    "src/mixins",
    "src/modules/*",
    "src/services",
    "src/types",
    "src/validators"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.stories.ts",
        "*.md"
      ],
      "message": "chore(release): publish"
    }
  }
}
